<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="5.0dip"
    android:layout_marginRight="5.0dip"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/closePopupsubmitImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5.0dip"
        android:layout_marginTop="5.0dip"
        android:src="@drawable/cancel" />

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="15.0dip">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25.0dip"
                android:layout_marginTop="25.0dip"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titletv"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20.0dip"
                    android:layout_marginRight="20.0dip"
                    android:text="Positive"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="25.0dip"
                    android:textStyle="bold" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@id/lottieAnimationProceed"
                    android:layout_width="104.0dip"
                    android:layout_height="104.0dip"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20.0dip"
                    android:layout_marginTop="20.0dip"
                    app:lottie_autoPlay="true"
                    app:lottie_fileName="form_submitted.json"
                    app:lottie_loop="true" />

                <TextView
                    android:id="@+id/messagetv"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20.0dip"
                    android:layout_marginLeft="20.0dip"
                    android:layout_marginRight="20.0dip"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="You Just Submitted a Positive Review"
                    android:textSize="18.0dip" />

                <Button
                    android:id="@+id/proceedbtn"
                    android:layout_width="200.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20.0dip"
                    android:background="@drawable/buttonstylegreen"
                    android:text="Proceed"
                    android:textAllCaps="false"
                    android:textSize="20dp"
                    android:textColor="#fff" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>